<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pagerCoverImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_recycler_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:civ_border_color="@color/Primary"
        app:civ_border_width="1dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pagerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitoregular"
        android:maxLength="7"
        android:text="Iceland"
        android:textColor="@color/Dark"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="@+id/pagerCoverImage"
        app:layout_constraintStart_toStartOf="@+id/pagerCoverImage"
        app:layout_constraintTop_toBottomOf="@+id/pagerCoverImage" />

</androidx.constraintlayout.widget.ConstraintLayout>